generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  username      String       @unique
  email         String       @unique
  password      String
  OngoingGame   OngoingGame?
  finishedGames FinishedGames[]
}

model Token {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  userUid       String
}

model Projects {
  id            Int       @id @default(autoincrement())
  placement     String    @unique
  order         Int       @unique
  url           String    @unique
  name          String    @unique
  description   String
  authors       String[]
  privateKey    String    @unique
  finishedGames FinishedGames[]
}

model OngoingGame {
  id              Int        @id @unique
  currentStage    Int  
  startedAt       DateTime   @default(now())
  user            User       @relation(fields: [userId], references: [id])
  userId          String     @unique
  score           Int
  completedStages Boolean[]
}

model FinishedGames {
  id                    Int       @id @default(autoincrement())
  user                  User      @relation(fields: [userId], references: [id])
  userId                String    
  registeredAt          DateTime  @default(now())
  timeSpentSeconds      Int
  projectModel          Projects  @relation(fields: [stage], references: [order])
  stage                 Int
  score                 Int
  finished              Boolean
  completedStages       Boolean[]
}
