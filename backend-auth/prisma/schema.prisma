generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  username      String @unique
  email         String @unique
  password      String
}

model Token {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  userUid       String
}


model Projects {
  id            Int @id @default(autoincrement())
  placement     Int @unique
  url           String @unique
  name          String @unique
  description   String
  authors       String[]
  privateKey    String @unique
}